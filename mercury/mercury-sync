#!/bin/bash
REPO=REPO GOES HERE
INSTALL_PATH=/mnt

#This is modified for chroot and base intstall, if you are reinstalling mercury change the INSTALL_PATH variable

mkdir -p $INSTALL_PATH/var/cache/mercury/depend

cd $INSTALL_PATH/var/cache/mercury/depend


wget -r -nH --cut-dirs=2 --no-parent --reject="index.html*" $REPO/depend

